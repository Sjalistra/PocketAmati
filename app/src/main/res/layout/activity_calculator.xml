<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:onClick="switchToFingerboardLengthViolin">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="org.skaza.pocketamati.CalculatorActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/scaleLengthViolin"
            android:id="@+id/scaleLengthViolinView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="switchToScaleLengthViolin"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/fingerboardLengthViolin"
            android:id="@+id/fingerboardLengthViolin"
            android:layout_below="@+id/scaleLengthViolinView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:onClick="switchToFingerboardLengthViolin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/fingerboardLengthViola"
            android:id="@+id/fingerboardLengthViola"
            android:layout_below="@+id/fingerboardLengthViolin"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="switchToFingerboardLengthViola"
            android:clickable="true" />
    </RelativeLayout>

</ScrollView>
