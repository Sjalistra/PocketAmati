<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg"
    android:windowSoftInputMode="adjustResize" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="org.skaza.pocketamati.MainActivity"
        android:windowSoftInputMode="adjustResize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="75dip"
            android:id="@+id/fhole"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/f"
            android:layout_marginTop="50dip"
            android:layout_marginBottom="50dip" />
        <ImageView
            android:layout_width="wrap_content"
            android:clickable="true"
            android:onClick="switchToCalc"
            android:layout_height="wrap_content"
            android:id="@+id/calculator"
            android:layout_below="@+id/fhole"
            android:layout_centerHorizontal="true"
            android:src="@drawable/calculator"
            android:adjustViewBounds="true"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip" />
        <TextView
            android:id="@+id/calcName"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/calculator"
            android:layout_alignTop="@+id/calculator"
            android:layout_alignRight="@+id/calculator"
            android:layout_alignBottom="@+id/calculator"
            android:gravity="center"
            android:text="@string/calcName"
            android:textColor="#ac560c"
            android:clickable="true"
            android:onClick="switchToCalc"
            android:layout_marginLeft="60dp"
            fontPath="fonts/WorkSans-Medium.ttf"/>
        <ImageView
            android:layout_width="wrap_content"
            android:clickable="true"
            android:onClick="switchToMeasure"
            android:layout_height="wrap_content"
            android:id="@+id/measurements"
            android:layout_below="@+id/calculator"
            android:layout_centerHorizontal="true"
            android:src="@drawable/measurements"
            android:adjustViewBounds="true"
            android:layout_marginBottom="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:text="@string/measureName"
            android:textColor="#ac560c"/>
        <TextView
            android:id="@+id/measureName"
            fontPath="fonts/WorkSans-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/measurements"
            android:layout_alignTop="@+id/measurements"
            android:layout_alignRight="@+id/measurements"
            android:layout_alignBottom="@+id/measurements"
            android:gravity="center"
            android:text="@string/measureName"
            android:textColor="#ac560c"
            android:onClick="switchToMeasure"
            android:layout_marginLeft="60dp"
            android:textSize="18dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/crafting"
            android:layout_below="@+id/measurements"
            android:layout_centerHorizontal="true"
            android:src="@drawable/crafting"
            android:adjustViewBounds="true"
            android:layout_marginBottom="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginLeft="15dip"
            android:text="@string/craftName"
            android:textColor="#ac560c"/>
        <TextView
            android:id="@+id/craftName"
            fontPath="fonts/WorkSans-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/crafting"
            android:layout_alignTop="@+id/crafting"
            android:layout_alignRight="@+id/crafting"
            android:layout_alignBottom="@+id/crafting"
            android:gravity="center"
            android:text="@string/craftName"
            android:textColor="#ac560c"
            android:layout_marginLeft="60dp"
            android:textSize="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/aboutName"
            android:id="@+id/about"
            android:clickable="true"
            android:onClick="switchToAbout"
            android:layout_below="@+id/crafting"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            fontPath="fonts/WorkSans-Medium.ttf"/>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>